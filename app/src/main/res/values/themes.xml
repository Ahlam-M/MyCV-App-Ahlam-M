<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCVAhlamM" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryDark">@color/dark_purple</item>
        <item name="colorAccent">@color/red_oxide</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_oxide</item>

        <!-- Customize your theme here. -->

    </style>




    <style name="Theme.MyCVAhlamM.NoActionBar" parent="Theme.MyCVAhlamM">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
        <item name="actionBarTheme">@null</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- disable action bar -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_oxide</item>
    </style>
</resources>